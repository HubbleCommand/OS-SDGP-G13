<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LegalActivity">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="fill_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comment est-ce que la ville décide de découper un arbre?"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_legal_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abattage d'arbres" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nComment est-ce que la ville protège les arbres et la nature?"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_protection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protection Nature" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nComment est-ce que la ville entretien les arbres et les milieux naturels?"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_entretien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entretien Nature" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>